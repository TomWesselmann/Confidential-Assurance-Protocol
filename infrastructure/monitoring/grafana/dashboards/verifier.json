{
  "dashboard": {
    "title": "CAP Verifier API - Production Monitoring",
    "tags": ["cap-verifier", "slo", "week5"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Request Results (OK/WARN/FAIL)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(cap_verifier_requests_total{result=\"ok\"}[5m])",
            "legendFormat": "OK",
            "refId": "A"
          },
          {
            "expr": "rate(cap_verifier_requests_total{result=\"warn\"}[5m])",
            "legendFormat": "WARN",
            "refId": "B"
          },
          {
            "expr": "rate(cap_verifier_requests_total{result=\"fail\"}[5m])",
            "legendFormat": "FAIL",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ],
        "xaxis": {"show": true},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 5,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "alignAsTable": true
        },
        "seriesOverrides": [
          {"alias": "FAIL", "color": "#E02F44"},
          {"alias": "WARN", "color": "#FF9830"},
          {"alias": "OK", "color": "#73BF69"}
        ]
      },
      {
        "id": 2,
        "title": "Request Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(cap_verifier_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 Latency",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(cap_verifier_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99 Latency",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ],
        "xaxis": {"show": true},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 5,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "alignAsTable": true
        },
        "seriesOverrides": [
          {"alias": "p95 Latency", "color": "#5794F2"},
          {"alias": "p99 Latency", "color": "#B877D9"}
        ],
        "alert": {
          "name": "High p95 Latency",
          "conditions": [
            {
              "evaluator": {"params": [0.5], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "message": "p95 latency exceeded 500ms",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(cap_verifier_requests_total{result=\"fail\"}[5m]) / (rate(cap_verifier_requests_total[5m]) > 0) * 100",
            "legendFormat": "Error Rate (%)",
            "refId": "A"
          },
          {
            "expr": "rate(cap_auth_token_validation_failures_total[5m])",
            "legendFormat": "Auth Failures/sec",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Error Rate"},
          {"format": "short"}
        ],
        "xaxis": {"show": true},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 5,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "alignAsTable": true
        },
        "seriesOverrides": [
          {"alias": "Error Rate (%)", "color": "#E02F44"}
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {"params": [1.0], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "message": "Error rate exceeded 1% over 5 minutes",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "singlestat",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "cap_cache_hit_ratio",
            "refId": "A"
          }
        ],
        "format": "percentunit",
        "valueName": "current",
        "valueFontSize": "80%",
        "gauge": {
          "show": true,
          "minValue": 0,
          "maxValue": 1,
          "thresholdMarkers": true,
          "thresholdLabels": false
        },
        "thresholds": "0.8,0.9",
        "colors": ["#E02F44", "#FF9830", "#73BF69"],
        "sparkline": {
          "show": true,
          "full": false,
          "lineColor": "rgb(31, 120, 193)",
          "fillColor": "rgba(31, 118, 189, 0.18)"
        }
      },
      {
        "id": 5,
        "title": "Total Requests",
        "type": "singlestat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(cap_verifier_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "format": "reqps",
        "valueName": "current",
        "valueFontSize": "80%",
        "gauge": {
          "show": false
        },
        "sparkline": {
          "show": true,
          "full": false,
          "lineColor": "rgb(31, 120, 193)",
          "fillColor": "rgba(31, 118, 189, 0.18)"
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "annotations": {
      "list": []
    },
    "templating": {
      "list": []
    },
    "links": []
  }
}
